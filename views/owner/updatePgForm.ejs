<%- include("../partials/owner/navbar.ejs") %>

<style>
    /* Additional form styling */
    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-weight: 600;
    }

    .form-label {
        font-weight: 500;
        color: #555;
    }

    .form-container {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .form-control, .form-select {
        border-radius: 5px;
    }

    .btn-submit {
        background-color: #28a745;
        border: none;
        color: #fff;
        padding: 10px 20px;
