<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: scale(1.02);
    }
    .btn-group button,
    .btn-group a {
        margin: 0 5px;
    }
</style>
<%- include("../partials/owner/navbar.ejs") %>

 <!-- Alert Section -->
 <% if (message) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>


<div class="container mt-5">
    <!-- Welcome and Introduction Section -->
    <div class="text-center mb-4">
        <h1>Welcome, <%= user.owner_name %>!</h1>
        <p class="lead">Manage everything related to your PG listings and booking requests from here. Stay updated and organized with ease.</p>
    </div>

    <!-- Action Buttons Section -->
    <div class="d-flex justify-content-center mb-4">
        <a href="/pg/owner/form/add" class="btn btn-success btn-lg me-3">
            <i class="bi bi-plus-lg"></i> Add New PG Listing
        </a>
        <a href="/pg/owner/bookings/manage" class="btn btn-primary btn-lg position-relative">
            <i class="bi bi-bell"></i> Manage Bookings
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <%= bookingRequests %> <!-- This should be dynamically set from the backend -->
            </span>
        </a>
    </div>

    <!-- Display PG Listings Section -->
    <% if (listings && listings.length > 0) { %>
        <div class="row justify-content-center">
            <% listings.forEach(function(pg) { %>
                <div class="col-md-10 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="row g-0">
                            <!-- PG Image -->
                            <div class="col-md-4">
                                <img src="<%= pg.main_image %>" alt="<%= pg.pg_name %>" class="img-fluid rounded-start" style="object-fit: cover; height: 100%;">
                            </div>

                            <!-- PG Details -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title d-flex align-items-center justify-content-between">
                                        <span><%= pg.pg_name %></span>
                                        <span class="text-muted">â‚¹<%= pg.price_per_month %> / Month</span>
                                    </h5>
                                    <p class="card-text">
                                        <strong>Address:</strong> <%= pg.address %>, <%= pg.city %> <i class="bi bi-geo-alt-fill"></i><br>
                                        <strong>Description:</strong> <%= pg.description.length > 100 ? pg.description.slice(0, 100) + '...' : pg.description %>
                                    </p>

                                    <!-- Amenities Section -->
                                    <div>
                                        <strong>Amenities:</strong>
                                        <div class="d-flex flex-wrap mt-2">
                                            <% Object.entries(pg.amenities).forEach(([key, value]) => { %>
                                                <% if (value === "true") { %>
                                                    <span class="badge bg-success me-2 mb-2"><%= key %></span>
                                                <% } %>
                                            <% }); %>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="btn-group mt-3" role="group">
                                        <!-- Delete Button with Confirmation -->
                                        <form id="delete-form-<%= pg.id %>" action="/pg/owner/delete/<%= pg.id %>" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this PG?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>

                                        <!-- View Details Button -->
                                        <a href="/pg/user/fetch/pgdetail/<%= pg.id %>" class="btn btn-primary">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>

                                        <!-- Edit Button -->
                                        <a href="/pg/owner/edit/<%= pg.id %>" class="btn btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center" role="alert">
            No PG listings found. Start by adding a new listing!
        </div>
    <% } %>
</div>

<!-- Script for Deleting PG Listing -->
<script>
    function deleteListing(pgId) {
        fetch(`/pg/owner/delete/${pgId}`, {
            method: "DELETE",
        })
        .then((response) => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert("Failed to delete the PG listing.");
            }
        })
        .catch((error) => {
            console.error("Error:", error);
            alert("An error occurred. Please try again.");
        });
        return false;
    }
</script>

