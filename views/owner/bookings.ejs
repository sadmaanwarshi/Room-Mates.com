<title>Room-Mates- Booking Page</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<%- include("../partials/owner/navbar.ejs") %>

<% if (message) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Bookings Management</h1>
    <h5 class="text-center">Total Booking Requests: <span class="badge bg-primary"><%= bookings.length %></span></h5>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Property</th>
                    <th>Status</th>
                    <th>Actions</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% bookings
                .sort((a, b) => new Date(b.created_at) - new Date(a.created_at)) // Sort recent bookings on top
                .forEach(booking => { %>
                    <tr>
                        <td><%= booking.id %></td>
                        <td><%= booking.student_first_name %> <%= booking.student_last_name %></td>
                        <td><%= booking.pg_name %></td>
                        <td>
                            <% if (booking.status === "Pending") { %>
                                <span class="badge bg-warning text-dark">Pending</span>
                            <% } else if (booking.status === "accepted") { %>
                                <span class="badge bg-success">Accepted</span>
                            <% } else if (booking.status === "rejected") { %>
                                <span class="badge bg-danger">Rejected</span>
                            <% } %>
                        </td>
                        
                        <td>
                            <% if (booking.status === "Pending") { %>
                                <form action="/pg/owner/bookings/<%= booking.pg_id %>/approve/<%= booking.id %>" method="POST" onsubmit="return confirmBook()" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">Accept</button>
                                </form>
                                <form action="/pg/owner/bookings/<%= booking.pg_id %>/reject/<%= booking.id %>" method="POST" onsubmit="return confirmReject()" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            <% } else { %>
                                
                                <span class="badge bg-secondary">Already <%= booking.status %></span>
                                <% if (booking.status === "rejected") { %>
                                    <form action="/pg/owner/bookings/<%= booking.pg_id %>/undo/<%= booking.id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-arrow-counterclockwise"></i>Undo</button>
                                    </form>
                                <% } %>
                            
                            <% } %>
                        </td>
                        <td>
                            <!-- Button to show booking details in modal -->
                            <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#bookingDetailsModal<%= booking.id %>">
                                <i class="bi bi-eye-fill"></i> View Details
                            </button>
                            
                            <!-- Modal for booking details -->
                            <div class="modal fade" id="bookingDetailsModal<%= booking.id %>" tabindex="-1" aria-labelledby="bookingDetailsLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="bookingDetailsLabel">Booking Details for <%= booking.pg_name %></h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p><strong>Name:</strong> <%= booking.student_first_name %> <%= booking.student_last_name%> </p>
                                            <p><strong>Phone Number</strong> <%= booking.student_phonenumber %></p>
                                            <p><strong>Email</strong> <%= booking.student_email %></p>
                                            
                                            <p><strong>Lease For:</strong> <%= booking.lease_year %> Months Expected</p>
                
                                            <p><strong>Check-In:</strong> <%= booking.check_in %></p>
                                            <p><strong>Rooms Requested:</strong> <%= booking.rooms_requested %> <%= booking.rent_type %> </p>
                                            
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include("../partials/footer.ejs") %>

<script>
    function confirmReject(){
        return confirm("Are You Sure You Want To Reject ?")
    }
    function confirmBook(){
        return confirm("Are You Sure You want to Accept ?");
    }
</script>